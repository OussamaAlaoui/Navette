@model IEnumerable<Navette.Models.subscription>

@{
    ViewBag.Title = "ViewSubs";
    Layout = "~/Views/Shared/_Traveller_layout.cshtml";
}

<h2>ViewSubs</h2>

<p>
    You are not subcribed to any line. Go back to the main page to fix this or click @Html.ActionLink("Here", "Index") .
</p>
<table class="table">
    <tr>
      
        <th>
            @Html.DisplayNameFor(model => model.line_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.reduction)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.line_id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.reduction)
        </td>
        <td>
            @Html.ActionLink("Unsubscribe", "Unsubscribe", new { /* id=item.PrimaryKey */ })
        </td>
    </tr>
}

</table>


@{
    ViewBag.Title = "UserType";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/Style/Login.css" rel="stylesheet" />
<h2>UserType</h2>
@ViewBag.n
@using (Html.BeginForm())
{
<div class="user-type">

    <label id="radio-title">Choose What type of user you are:</label>
 
   <input class="radio1" type="radio" id="traveller" name="users_type" value="Traveller" checked>
    <label for="traveller">Traveller</label>
    <input class="radio2" type="radio" id="serves" name="users_type" value="Provider">
    <label for="serves">Serves Provider</label>
</div>
    <div class="input-group">
        <button type="submit" class="btn">Continue</button>
    </div>

}

